{% extends "::base.html.twig" %}

{% block body %}


    <div class="row">
        <div class="col s3 offset-s3">
            <div class="card">
                <div class="card-image">
                    <img class="responsive-img" src="{{ card.picture }}">
                </div>
                <div class="card-content">
                    <p>Num√©ro de page : {{ card.nbcard }}</p>
                </div>
                <div class="card-action">
                    {% if card_previous %}
                        <a href="{{ path('wcs_commit_strip_homepage', {'page' : card_previous.nbcard }) }}" class="waves-effect waves-light btn left"><i class="material-icons">fast_rewind</i></a>
                    {% endif %}

                    {% if card_next %}
                        <a href="{{ path('wcs_commit_strip_homepage', {'page' : card_next.nbcard }) }}" class="waves-effect waves-light btn right"><i class="material-icons">fast_forward</i></a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
